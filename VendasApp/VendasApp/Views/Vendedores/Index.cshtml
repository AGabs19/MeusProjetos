@model IEnumerable<VendasApp.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedor";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar um Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="sucess">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Aniversario)</th>
            <th>@Html.DisplayNameFor(model => model.SalarioBase)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(ModelItem => item.Nome)</td>
                <td>@Html.DisplayFor(ModelItem => item.Email)</td>
                <td>@Html.DisplayFor(ModelItem => item.Aniversario)</td>
                <td>@Html.DisplayFor(ModelItem => item.SalarioBase)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Ediat</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
